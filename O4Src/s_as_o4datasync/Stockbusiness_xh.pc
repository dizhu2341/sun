#include "Stockbusiness_xh.h"
#define SQLCA_STORAGE_CLASS extern
#include <sqlca.h>

CStockBusinessXh::CStockBusinessXh(IAS2Context * lpContext) : CDataSync(lpContext)
{
    strcpy(m_sSrcTable, "tstockbusiness");
    strcpy(m_sSrcView,  "vo4jc_mktstockbusiness");
    strcpy(m_sTmpTable, "sync_stockbusiness_xh");
    strcpy(m_sDstTable, "uft_tstockbusiness_xh");
    m_nBatchRows = BATCH_ROWS;
    EXEC SQL WHENEVER SQLERROR DO SqlErrorAction();
}

CStockBusinessXh::~CStockBusinessXh()
{}

bool CStockBusinessXh::ExpO3View2Temp()
{
    LOGDETAIL("【" << m_sDstTable << "】表同步，导入数据到中间转换表【" << m_sTmpTable << "】开始");

    struct sqlca sqlca;
    EXEC SQL ENABLE THREADS;
    
    EXEC SQL BEGIN DECLARE SECTION;
        int nFetchRows;
       
        typedef struct StockBusinessXhRecord
        {
            int business_date[BATCH_ROWS];
            int busin_no[BATCH_ROWS];
            int company_id[BATCH_ROWS];
            int fund_id[BATCH_ROWS];//                       number(8,0)    DEFAULT 0       NOT NULL   , 
            int asset_id[BATCH_ROWS];//                      number(10,0)   DEFAULT 0       NOT NULL   , 
            int combi_id[BATCH_ROWS];//                      number(10,0)   DEFAULT 0       NOT NULL   , 
            char stockholder_id[BATCH_ROWS][21];//                varchar2(20)   DEFAULT '' ''   NOT NULL   , 
            char bind_seat[BATCH_ROWS][21];//                     varchar2(20)   DEFAULT '' ''   NOT NULL   , 
            char invest_type[BATCH_ROWS][2];//                   char(1)        DEFAULT '' ''   NOT NULL   , 
            char position_type[BATCH_ROWS][2];//                 char(1)        DEFAULT '' ''   NOT NULL   , 
            int market_no[BATCH_ROWS];//                     number(8,0)    DEFAULT 0       NOT NULL   , 
            char report_code[BATCH_ROWS][33];//                   varchar2(32)   DEFAULT '' ''   NOT NULL   , 
            char busin_op_flag[BATCH_ROWS][4];//                 varchar2(3)    DEFAULT '' ''   NOT NULL   , 
            double occur_amount[BATCH_ROWS];//                  number(20,4)   DEFAULT 0       NOT NULL   , 
            int operate_enable_date[BATCH_ROWS];//           number(8,0)    DEFAULT 0       NOT NULL   , 
            int enable_point[BATCH_ROWS];//                  number(8,0)    DEFAULT 0       NOT NULL   , 
            int expire_date[BATCH_ROWS];//                   number(8,0)    DEFAULT 0       NOT NULL   , 
            int expire_point[BATCH_ROWS];//                  number(8,0)    DEFAULT 0       NOT NULL   , 
            double carryover_cost[BATCH_ROWS];//                number(18,2)   DEFAULT 0       NOT NULL   , 
            double original_cost[BATCH_ROWS];//                 number(18,2)   DEFAULT 0       NOT NULL   , 
            double carryover_real_cost[BATCH_ROWS];//           number(18,2)   DEFAULT 0       NOT NULL   , 
            double original_real_cost[BATCH_ROWS];//            number(18,2)   DEFAULT 0       NOT NULL   , 
            double carryover_profit[BATCH_ROWS];//              number(18,2)   DEFAULT 0       NOT NULL   , 
            double original_profit[BATCH_ROWS];//               number(18,2)   DEFAULT 0       NOT NULL   , 
            double carryover_real_profit[BATCH_ROWS];//         number(18,2)   DEFAULT 0       NOT NULL   , 
            double original_real_profit[BATCH_ROWS];//          number(18,2)   DEFAULT 0       NOT NULL   , 
            double carryover_interest_cost[BATCH_ROWS];//       number(18,2)   DEFAULT 0       NOT NULL   , 
            double original_interest_cost[BATCH_ROWS];//        number(18,2)   DEFAULT 0       NOT NULL   , 
            double carryover_interest_profit[BATCH_ROWS];//     number(18,2)   DEFAULT 0       NOT NULL   , 
            double original_interest_profit[BATCH_ROWS];//      number(18,2)   DEFAULT 0       NOT NULL   , 
            double original_cost_trade[BATCH_ROWS];//           number(18,2)   DEFAULT 0       NOT NULL   , 
            double carryover_cost_trade[BATCH_ROWS];//          number(18,2)   DEFAULT 0       NOT NULL   , 
            double original_profit_trade[BATCH_ROWS];//         number(18,2)   DEFAULT 0       NOT NULL   , 
            double carryover_profit_trade[BATCH_ROWS];//        number(18,2)   DEFAULT 0       NOT NULL   , 
            double original_real_cost_trade[BATCH_ROWS];//      number(18,2)   DEFAULT 0       NOT NULL   , 
            double carryover_real_cost_trade[BATCH_ROWS];//     number(18,2)   DEFAULT 0       NOT NULL   , 
            double original_real_profit_trade[BATCH_ROWS];//    number(18,2)   DEFAULT 0       NOT NULL   , 
            double carryover_real_profit_trade[BATCH_ROWS];//   number(18,2)   DEFAULT 0       NOT NULL   , 
            int operator_no[BATCH_ROWS];//                   number(8,0)    DEFAULT 0       NOT NULL   , 
            int occur_time[BATCH_ROWS];//                    number(6,0)    DEFAULT 0       NOT NULL     
        } StockBusinessXhRecord;
        StockBusinessXhRecord * lpStockBusinessXhRecord = NULL;
    EXEC SQL END DECLARE SECTION;
    
    // 从O3视图读取数据放入到游标
    LOGDETAIL("【" << m_sDstTable << "】表同步，查询O3View【" << m_sSrcView << "】数据开始");
   
    sql_context O3DbContext = m_lpO3Conn->getSQLContext(); // 获取O3数据库连接句柄
    EXEC SQL CONTEXT USE :O3DbContext;
    EXEC SQL DECLARE RESULT CURSOR FOR 
        select
            business_date, 
            busin_no, 
            company_id, 
            fund_id, 
            asset_id, 
            combi_id, 
            stockholder_id, 
            bind_seat, 
            invest_type, 
            position_type, 
            market_no, 
            report_code, 
            busin_op_flag, 
            occur_amount, 
            operate_enable_date, 
            enable_point, 
            expire_date, 
            expire_point, 
            carryover_cost, 
            original_cost, 
            carryover_real_cost, 
            original_real_cost, 
            carryover_profit, 
            original_profit, 
            carryover_real_profit, 
            original_real_profit, 
            carryover_interest_cost , 
            original_interest_cost, 
            carryover_interest_profit, 
            original_interest_profit, 
            original_cost_trade, 
            carryover_cost_trade, 
            original_profit_trade, 
            carryover_profit_trade, 
            original_real_cost_trade, 
            carryover_real_cost_trade, 
            original_real_profit_trade, 
            carryover_real_profit_trade, 
            operator_no, 
            occur_time
        from vo4jc_mktstockbusiness;
    EXEC SQL OPEN RESULT;
    if (sqlca.sqlcode < 0)
    {
        SetErrorInfo(SYNC_ERR_QUERY_SRC_TABLE, "【%s】表同步，查询O3View【%s】数据失败【%s】", m_sDstTable, m_sSrcView, sqlca.sqlerrm.sqlerrmc);
        return false;
    }
    LOGDETAIL("【" << m_sDstTable << "】表同步，查询O3View【" << m_sSrcView << "】完成，总行数【" << m_nTotalRows << "】条");
    
    // 申请内存空间
    lpStockBusinessXhRecord =  new StockBusinessXhRecord();
    if (NULL == lpStockBusinessXhRecord)
    {
        SetErrorInfo(SYNC_ERR_MALLOC_MEMORY, "【%s】表同步，申请结构体内存【StockbusinessRecord】失败", m_sDstTable);
        return false;
    }
    
    // 获取O4数据连接句柄
    sql_context O4DbContext = m_lpO4Conn->getSQLContext();
    for (int i = 0; i < m_nLoopTimes; ++i)
    {
        // 清空内存，并把游标里的结果集放入lpStockBusinessXhRecord指向的内存中，一次放入BATCH_ROWS行数据
        memset(lpStockBusinessXhRecord, 0, sizeof (StockBusinessXhRecord));
        EXEC SQL CONTEXT USE :O3DbContext;
        EXEC SQL FETCH RESULT into :lpStockBusinessXhRecord;
        if (sqlca.sqlcode < 0)
        {
            SetErrorInfo(SYNC_ERR_EXPORT_DATA_TEMP, "【%s】表同步，导入数据到中间转换表【%s】时FETCH数据失败【%s】", m_sDstTable, m_sTmpTable, sqlca.sqlerrm.sqlerrmc);
            delete lpStockBusinessXhRecord;
            return false;
        }
        
        // 如果是最后一次循环，那么nFetchRows就等于m_nRemainRows行数据，m_nRemainRows小于等于BATCH_ROWS
        // 如果不是最后一次循环，那么nFetchRows就等于m_nBatchRows=BATCH_ROWS行数据
        nFetchRows = (i == (m_nLoopTimes - 1)) ? m_nRemainRows : m_nBatchRows;
        
        // 把lpStockBusinessXhRecord指向的内存里的数据导入到中间表
        EXEC SQL CONTEXT USE :O4DbContext;
        EXEC SQL for :nFetchRows
            insert into sync_stockbusiness_xh(
                business_date, 
                busin_no, 
                company_id, 
                fund_id, 
                asset_id, 
                combi_id, 
                stockholder_id, 
                bind_seat, 
                invest_type, 
                position_type, 
                market_no, 
                report_code, 
                busin_op_flag, 
                occur_amount, 
                operate_enable_date, 
                enable_point, 
                expire_date, 
                expire_point, 
                carryover_cost, 
                original_cost, 
                carryover_real_cost, 
                original_real_cost, 
                carryover_profit, 
                original_profit, 
                carryover_real_profit, 
                original_real_profit, 
                carryover_interest_cost , 
                original_interest_cost, 
                carryover_interest_profit, 
                original_interest_profit, 
                original_cost_trade, 
                carryover_cost_trade, 
                original_profit_trade, 
                carryover_profit_trade, 
                original_real_cost_trade, 
                carryover_real_cost_trade, 
                original_real_profit_trade, 
                carryover_real_profit_trade, 
                operator_no, 
                occur_time)
            values(
                :lpStockBusinessXhRecord->business_date, 
                :lpStockBusinessXhRecord->busin_no, 
                :lpStockBusinessXhRecord->company_id, 
                :lpStockBusinessXhRecord->fund_id, 
                :lpStockBusinessXhRecord->asset_id, 
                :lpStockBusinessXhRecord->combi_id, 
                rtrim(:lpStockBusinessXhRecord->stockholder_id), 
                rtrim(:lpStockBusinessXhRecord->bind_seat), 
                rtrim(:lpStockBusinessXhRecord->invest_type), 
                rtrim(:lpStockBusinessXhRecord->position_type), 
                :lpStockBusinessXhRecord->market_no, 
                rtrim(:lpStockBusinessXhRecord->report_code), 
                rtrim(:lpStockBusinessXhRecord->busin_op_flag), 
                :lpStockBusinessXhRecord->occur_amount, 
                :lpStockBusinessXhRecord->operate_enable_date, 
                :lpStockBusinessXhRecord->enable_point, 
                :lpStockBusinessXhRecord->expire_date, 
                :lpStockBusinessXhRecord->expire_point, 
                :lpStockBusinessXhRecord->carryover_cost, 
                :lpStockBusinessXhRecord->original_cost, 
                :lpStockBusinessXhRecord->carryover_real_cost, 
                :lpStockBusinessXhRecord->original_real_cost, 
                :lpStockBusinessXhRecord->carryover_profit, 
                :lpStockBusinessXhRecord->original_profit, 
                :lpStockBusinessXhRecord->carryover_real_profit, 
                :lpStockBusinessXhRecord->original_real_profit, 
                :lpStockBusinessXhRecord->carryover_interest_cost , 
                :lpStockBusinessXhRecord->original_interest_cost, 
                :lpStockBusinessXhRecord->carryover_interest_profit, 
                :lpStockBusinessXhRecord->original_interest_profit, 
                :lpStockBusinessXhRecord->original_cost_trade, 
                :lpStockBusinessXhRecord->carryover_cost_trade, 
                :lpStockBusinessXhRecord->original_profit_trade, 
                :lpStockBusinessXhRecord->carryover_profit_trade, 
                :lpStockBusinessXhRecord->original_real_cost_trade, 
                :lpStockBusinessXhRecord->carryover_real_cost_trade, 
                :lpStockBusinessXhRecord->original_real_profit_trade, 
                :lpStockBusinessXhRecord->carryover_real_profit_trade, 
                :lpStockBusinessXhRecord->operator_no, 
                :lpStockBusinessXhRecord->occur_time);
        if (sqlca.sqlcode < 0)
        {
            SetErrorInfo(DB_ERR_INSERT, "【%s】表同步，导入数据到中间转换表【%s】失败【%s】", m_sDstTable, m_sTmpTable, sqlca.sqlerrm.sqlerrmc);
            delete lpStockBusinessXhRecord;
            return false;
        }
        EXEC SQL COMMIT;
    }
    
    EXEC SQL CONTEXT USE :O3DbContext;
    EXEC SQL CLOSE RESULT;
    delete lpStockBusinessXhRecord;
    
    LOGDETAIL("【" << m_sDstTable << "】表同步，导入数据到中间转换表【" << m_sTmpTable << "】完成");
    return true;
}

