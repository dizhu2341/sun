            ""
            // 清空O4表数据，并把水位清零
            "   EXECUTE IMMEDIATE 'truncate table ' || V_O4_TABLE_NAME;"
            // 把中间表数据导入到O4表
            "   EXECUTE IMMEDIATE   'INSERT INTO '|| V_O4_TABLE_NAME || '(' || "
            "                            'business_date, ' || "
            "                            'busin_no, ' || "
            "                            'company_id, ' || "
            "                            'fund_id, ' || "
            "                            'asset_id, ' || "
            "                            'combi_id, ' || " 
            "                            'stockholder_id, ' || "
            "                            'bind_seat, ' || "
            "                            'invest_type, ' || "
            "                            'position_type, ' || " 
            "                            'market_no, ' || "
            "                            'report_code, '|| "
            "                            'busin_op_flag, ' || "
